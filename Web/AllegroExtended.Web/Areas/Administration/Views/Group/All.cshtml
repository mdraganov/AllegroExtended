@model List<AllegroExtended.Web.Areas.Administration.ViewModels.GroupJsonViewModel>
@{
    ViewBag.Title = "All Account Requests";
}

<h2 class="text-muted">@ViewBag.Title</h2>
@if (this.TempData["Notification"] != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        @this.TempData["Notification"]
    </div>
}
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            @Html.DisplayFor(m => m[i], new { row = i + 1});
        }
    </tbody>
</table>
<form action="/Administration/Group/Create" class="form-horizontal" method="post" role="form">
    @Html.AntiForgeryToken()
    <div class="form-group row">
        <label for="name" class="control-label col-lg-offset-4 col-lg-3">Create new group</label>
        <div class="input-group col-lg-5">
            <span class="input-group-addon">Name</span>
            <input type="text" class="form-control" required name="name">
            <span class="input-group-btn">
                <input type="submit" class="btn btn-primary" value="Create" />
            </span>
        </div>
    </div>
</form>