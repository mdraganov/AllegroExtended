@model AllegroExtended.Web.Areas.Administration.ViewModels.GroupDetailsViewModel

<h2 class="text-muted">Permissions for this group: </h2>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Class</th>
            <th>Read Only</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Permissions.Count; i++)
        {
            @Html.DisplayFor(m => m.Permissions[i], new { row = i + 1 });
        }
    </tbody>
</table>