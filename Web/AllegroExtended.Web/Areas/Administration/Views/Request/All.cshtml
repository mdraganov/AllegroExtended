@model List<AllegroExtended.Web.Areas.Administration.ViewModels.AccountRequestViewModel>
@{
    ViewBag.Title = "All Account Requests";
}

<h2 class="text-muted">@ViewBag.Title</h2>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
            <th>Department</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            @Html.DisplayFor(m => m[i], new { row = i + 1});
        }
    </tbody>
</table>