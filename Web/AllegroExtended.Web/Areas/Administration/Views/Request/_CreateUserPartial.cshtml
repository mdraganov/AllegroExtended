@model AllegroExtended.Web.Areas.Administration.ViewModels.AccountRequestDetailsViewModel

<form action="/Administration/User/Create" class="form form-horizontal" method="post" role="form" novalidate="novalidate">
    @Html.AntiForgeryToken()
    <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
        <ul>
            <li style="display:none"></li>
        </ul>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="Email">Email</label>
        <div class="col-md-10">
            <input class="form-control" data-val="false" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="Email" name="Email" type="text" value="@Model.Email">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="UserName">Username</label>
        <div class="col-md-10">
            <input class="form-control" data-val="false" data-val-email="The Username field is not valid." data-val-required="The Username field is required." id="UserName" name="UserName" type="text" value="@Model.UserName">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="Group">Department</label>
        <div class="col-md-10">
            <select class="form-control" id="dd-groups" name="Group" aria-invalid="false"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="Password">Password</label>
        <div class="col-md-10">
            <input class="form-control" data-val="false" data-val-length="The Password must be at least 5 characters long." data-val-length-max="100" data-val-length-min="6" data-val-required="The Password field is required." id="Password" name="Password" type="password">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="ConfirmPassword">Confirm password</label>
        <div class="col-md-10">
            <input class="form-control" data-val="false" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password" id="ConfirmPassword" name="ConfirmPassword" type="password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary btn-block" value="Create">
        </div>
    </div>
</form>