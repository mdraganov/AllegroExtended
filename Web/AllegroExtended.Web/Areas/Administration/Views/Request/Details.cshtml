@model AllegroExtended.Web.Areas.Administration.ViewModels.AccountRequestDetailsViewModel
@{
    ViewBag.Title = "Requests Details";
}

<h2 class="text-muted">@ViewBag.Title</h2>
<div class="well">
    <p class="lead">Application request from: @Model.Email</p>
    <p class="lead">User name: @Model.UserName</p>
    <p class="lead">From department: @Model.Group</p>
    <p class="lead">Additional notes: @Model.Remark</p>
</div>
<div class="well">
    @Html.Partial("_CreateUserPartial")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        jQuery.getJSON("/administration/group/allasync", "", function (data) {
            jQuery(data).each(function (index, element) {
                var newGroupElement = $("<option value=\"" + element.Id + "\">" + element.Name + "</option>");
                $("#dd-groups").append(newGroupElement);
            });
        });
    </script>
}
