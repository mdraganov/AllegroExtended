@{
    Layout = "../../../../Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3 col-lg-pull-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Admin Panel</h3>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="/administration/request/allunread">New Account Requests</a>
                        <span class="badge">@this.ViewBag.NewAccountRequests</span>
                    </li>
                    <li class="list-group-item">
                        <a href="/administration/request/all">All Account Requests</a>
                        <span class="badge">@this.ViewBag.AllAccountRequests</span>
                    </li>
                    <li class="list-group-item">
                        <a href="/administration/user/all">Users</a>
                    </li>
                    <li class="list-group-item">
                        <a href="#">Groups</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        @RenderBody()
    </div>
</div>
@section Scripts{
    @RenderSection("scripts", required: false)
}